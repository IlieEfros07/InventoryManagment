<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InvManagmentAO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InvManagmentAO.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        :root {
            --primary-green: #3A7D44;
            --secondary-brown: #8B6C42;
            --background-cream: #F9F5EB;
            --accent-yellow: #F9C80E;
            --text-brown: #4A3C2A;
        }

        body {
            background-color: var(--background-cream);
            color: var(--text-brown);
        }

        .navbar {
            background-color: var(--primary-green) !important;
            border-bottom: 3px solid var(--secondary-brown);
        }

        .navbar-brand, .nav-link {
            color: var(--background-cream) !important;
        }

            .nav-link:hover {
                color: var(--accent-yellow) !important;
            }

        .footer {
            background-color: var(--secondary-brown);
            color: var(--background-cream);
            border-top: 3px solid var(--primary-green);
        }

        .btn-primary {
            background-color: var(--primary-green);
            border-color: var(--secondary-brown);
        }

            .btn-primary:hover {
                background-color: var(--secondary-brown);
                border-color: var(--primary-green);
            }

        .badge {
            background-color: var(--accent-yellow);
            color: var(--text-brown);
        }

        .navbar-toggler {
            border-color: var(--background-cream);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(249, 245, 235, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" style="height: 40px;" class="me-2">
                    Inventar Agricol
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Inventory" asp-action="Index">Inventar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Setări</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    &copy; @DateTime.Now.Year - InvManagmentAO
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a class="text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Politică de confidențialitate</a>
                    <span class="mx-2">|</span>
                    <a class="text-light" href="#"><i class="fas fa-phone-alt me-1"></i>Support</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>